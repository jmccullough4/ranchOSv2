{
  "name": "ranchos-demo",
  "version": "1.1.0",
  "description": "3 Strands Cattle Co. smart ranch demo served by an Express API with a React + Mapbox interface.",
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "nodemon --watch server server/index.js",
    "dev:client": "cd frontend && vite",
    "build": "cd frontend && vite build",
    "preview": "cd frontend && vite preview --host 0.0.0.0 --port 4173"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mapbox-gl": "^2.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "vite": "^5.0.0"
  },
  "license": "UNLICENSED"
}
